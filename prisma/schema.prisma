generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  RECRUITER
  CANDIDATE
}

enum JDSourceType {
  MANUAL
  PDF
  AI
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role
  jobs      Job[]    @relation("RecruiterJobs")
  createdAt DateTime @default(now())
}

model Job {
  id          String  @id @default(uuid())
  title       String
  location    String?
  companyName String?
  jobType     String?
  experience  String?
  salary      String?

  recruiterId String
  recruiter   User   @relation("RecruiterJobs", fields: [recruiterId], references: [id])

  skills       JobSkill[]
  descriptions JobDescription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobSkill {
  id        String @id @default(uuid())
  skillName String
  jobId     String
  job       Job    @relation(fields: [jobId], references: [id])
}

model JobDescription {
  id             String       @id @default(uuid())
  jobId          String
  content        String
  sourceType     JDSourceType
  sourceMetadata Json?
  version        Int
  isActive       Boolean      @default(true)

  job       Job      @relation(fields: [jobId], references: [id])
  createdAt DateTime @default(now())
}
